---
// Define una interfaz para el tipo Year
interface Year {
  year: number;
  title: string;
  description: string;
  videoPath: string;
  date: string;
}

// Especifica el tipo del prop years
const { years } = Astro.props as { years: Year[] };
---

<section id="years" class="py-16 relative">
  <!-- Línea del timeline más sutil -->
  <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-gradient-to-b from-blue-700 via-gray-500 to-blue-700 z-0 hidden md:block"></div>
  
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-blue-200">
      Línea del Tiempo
    </h2>
    
    <div class="relative z-10">
      {years.map((yearData: Year, index: number) => (
        <div class={`flex flex-col md:flex-row md:items-center mb-16 relative ${index % 2 === 0 ? '' : 'md:flex-row-reverse'}`}>
          <!-- Nodo del timeline -->
          <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 w-5 h-5 rounded-full bg-blue-500 border-2 border-gray-900 z-20 shadow-[0_0_8px_2px_rgba(59,130,246,0.3)]"></div>
          
          <!-- Contenido -->
          <div class="md:w-1/2 md:px-12">
            <div class={`relative p-6 rounded-xl overflow-hidden ${index % 2 === 0 ? 'md:mr-8' : 'md:ml-8'}`}>
              <!-- Fondo con efecto de glassmorphism más sutil -->
              <div class="absolute inset-0 bg-gradient-to-br from-gray-800/70 to-blue-900/40 backdrop-blur-sm rounded-xl border border-blue-400/20"></div>
              
              <!-- Contenido -->
              <div class="relative">
                <div class="flex items-center justify-between mb-4">
                  <span class="px-4 py-1 bg-blue-500/20 backdrop-blur-md rounded-full text-blue-200 font-mono">
                    Año {yearData.year}
                  </span>
                  <span class="text-sm font-medium bg-gray-700/60 px-3 py-1 rounded-full backdrop-blur-sm text-gray-200">
                    {yearData.date}
                  </span>
                </div>
                
                <h3 class="text-2xl font-bold text-white mb-3">{yearData.title}</h3>
                
                <p class="text-gray-300 mb-4">{yearData.description}</p>
                
                <a href={`#video-${yearData.year}`} class="inline-flex items-center text-blue-300 hover:text-white transition-colors">
                  <span>Ver momentos</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Elemento decorativo del lado opuesto (más sutil) -->
          <div class="md:w-1/2 hidden md:block">
            <div class={`w-16 h-16 rounded-full mx-auto ${index % 2 === 0 ? 'ml-auto mr-8' : 'mr-auto ml-8'} bg-gradient-to-br from-blue-600/40 to-gray-700/30 opacity-20 blur-lg`}></div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>